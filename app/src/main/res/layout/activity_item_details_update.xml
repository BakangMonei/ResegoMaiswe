<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appback"
    tools:context=".screens.ItemDetailsUpdate">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="20dp"
        android:layout_above="@id/bottomNav"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottomNav"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Update"
                    android:textColor="#000000"
                    android:fontFamily="@font/nunitoregular"
                    android:textSize="27dp"
                    />


                <ImageView
                    android:id="@+id/updateImageBtn"
                    android:layout_width="200dp"
                    android:layout_height="160dp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/splash_screen_image" />

                <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                    android:textSize="18dp"
                    android:fontFamily="@font/nunitoregular"
                    android:textColor="#b5b5bd"
                />

                <EditText
                    android:id="@+id/updateName"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:hint="Fix Item Name"
                    android:inputType="text"
                    android:padding="5dp"
                    android:textColor="#b5b5bd"
                    android:textColorHint="#b5b5bd" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="18dp"
                    android:fontFamily="@font/nunitoregular"
                    android:textColor="#b5b5bd"
                    />

                <EditText
                    android:id="@+id/updatePrice"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="5dp"
                    android:hint="Fix Item Price"
                    android:inputType="text"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="#b5b5bd"
                    android:textColorHint="#b5b5bd" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="18dp"
                    android:fontFamily="@font/nunitoregular"
                    android:textColor="#b5b5bd"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:weightSum="3">


                    <TextView
                        android:id="@+id/location"
                        android:layout_width="181dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="#b5b5bd"
                        android:text="location" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="@color/float_transparent"
                        android:onClick="addlocation"
                        app:tint="#728172"
                        android:src="@drawable/location"
                        />
                </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textSize="18dp"
                android:fontFamily="@font/nunitoregular"
                android:textColor="#b5b5bd"/>

            <EditText
                android:id="@+id/update_Date"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:hint="Fix Item Date"
                android:inputType="text"
                android:padding="5dp"
                android:textColor="#b5b5bd"
                android:textColorHint="#b5b5bd"
               />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textSize="18dp"
                android:fontFamily="@font/nunitoregular"
                android:textColor="#b5b5bd" />


            <EditText
                android:id="@+id/updateDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="start"
                android:hint="Fix Item Description"
                android:textColorHint="#b5b5bd"
                android:fontFamily="@font/nunitoregular"
                android:textColor="#b5b5bd"/>





                <Button
                    android:id="@+id/updateBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/buttonbg"
                    android:fontFamily="@font/quicksandsemibold"
                    android:text="Save Changes"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    app:backgroundTint="#728172" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottomNav"
        android:layout_alignParentBottom="true"
        app:menu="@menu/nav"
        app:itemIconTint="#fafafa"
        android:background="#2b2b33"
        app:itemTextColor="#fafafa"/>
</RelativeLayout>














